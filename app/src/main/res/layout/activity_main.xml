<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <!-- AppBar con color primario Rototec -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:background="#2E6090"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="EyeSeeYou"
            app:titleTextColor="#FFFFFFFF"
            app:subtitle="Compartiendo ubicación a Rototec"
            app:subtitleTextColor="#B3FFFFFF"
            app:navigationIconTint="#FFFFFFFF" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal: el mapa -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- MapFragment (SupportMapFragment en el Activity) -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Overlay de estado tipo "card" -->
        <LinearLayout
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="14dp"
            android:orientation="vertical"
            android:background="@drawable/rototec_card_bg"
            android:elevation="6dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estás aquí"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compartiendo tu ubicación a Rototec"
                android:textColor="#66000000"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/wsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectando al servidor..."
                android:textColor="#2E6090"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCenter"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Centrar en mi posición"
                app:strokeColor="#5BC0DE"
                app:strokeWidth="2dp"
                android:textColor="#5BC0DE" />
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
